- extends "base.haml"
- block css
  %link{:href => "{{STATIC_URL}}css/switchery.min.css", :type => "text/css", :rel => "stylesheet"}
  %link{:href => "{{STATIC_URL}}css/share.css", :type => "text/css", :rel => "stylesheet"}
- block js
  :javascript
    data={
      user:{name: "{{username}}"},
      courseInfo: {{courseInfo|safe}},
      schedule: {{schedule|safe}},
      courseList: {{courseList|safe}},
      startYear: {{startYear|safe}},
      startTerm: {{startTerm|safe}},
    }
    window.data=data
    allSubjects={{allSubjects|safe}}
  %script{:src => "{{STATIC_URL}}js/lib/switchery.min.js", :type => "text/javascript"}
  %script{:src => "{{STATIC_URL}}js/share.js", :type => "text/javascript"}


- block body
  %nav.navbar.navbar-default.navbar-static-top{role: 'navigation'}
    %div.navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"}
        UW Course Scheduler

    %div.collapse.navbar-collapse.navbar-ex1-collapse
      %ul.nav.navbar-nav
      %ul.nav.navbar-nav.navbar-right
        %li
          %a{href: '#'}
            Create your schedule
        %li
          %a{href: '#'}
            Use this as template
  #main

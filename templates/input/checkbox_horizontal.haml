- load add_class
- load tooltips

.form-group{:class => "{% if input.errors %}has-error{% endif %}"}
  .col-xs-offset-4.col-xs-8
    .checkbox-list
      %label
        - if tooltip
          - inserttooltip tooltip
        - if tooltip_string
          - inserttooltip_string tooltip_string
        - if label
          %label{:for => "{{ input.id_for_label }}", :class =>"{% if bold %}control-label{% endif %}"}
            = label
        - else
          - if bold
            = input|label_with_class:"control-label"
          - else 
            = input.label_tag
        - if required
          %span.note (Required)
        = input
      - if input.errors
        .input_errors_list
          - for error in input.errors
            .validate-error
              = error|escape
